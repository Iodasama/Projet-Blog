{% extends "Guest/base.html.twig" %}

{#{% block metatitle%} Get your article {% endblock %} optimisation du SEO voir ci dessous - et si on souhaite jsute le title generique de la base pas de block meta title ici pour l'affciher dans l'onglet #}
{% block metatitle %}{{ article.title }} - La Chine aux Rayons X{% endblock %}


{% block content %}
    <!--symfony configure pour que cela parte directement depuis Templates donc  Page donc pas besoin de mettre templates pour le chemin meme si on cree le dossier Partial pour mettre sa base il faudra ecrire 'Partial/articles.html.twig' sans indiquer  templates {Pourcent extends "Page/base.html.twig" Pourcent} -->
    <main>
        <div class = "formulaire-review">
            <h1 class="sign-in">Your favorite Article</h1>

            {% if article and article.isPublished %}
                <div class ="form-examples">
                    <h1 class="sign-in2">{{ article.title }}</h1>
                    <img class="admin_image" src="{{ asset('images/'~article.image) }}" alt="{{ article.title }}">
                    <h3 class="poke2">{{ article.description }}</h3>
                    <p class="poke2">{{ article.content }}</p>
                </div>

    {#            <a href="{{ path('article_update', {id:article.id}) }}">Update Your Artcile</a>#}
            {% else %}
                <p class="poke">Your favorite article doesn't exist</p>
            {% endif %}
        </div>
        <div class = "formulaire-review">
            <div class ="form-examples text-category-color">
                <a class="text-category-color" href="{{ path('categories_list_db') }}">All your categories <i class="fa-solid fa-turn-down"></i></a>
            </div>
        </div>
    </main>
{% endblock %}